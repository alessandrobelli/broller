{
  "name": "broller",
  "productName": "BRoller",
  "version": "0.0.1",
  "description": "BRoller is a desktop app to search for B-rolls on your pc.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "make-mac": "npx @electron-forge/cli make --platform darwin",
    "make-linux": "npx @electron-forge/cli make --platform linux --targets deb"
  },
  "keywords": [
    "electron",
    "brolls"
  ],
  "author": {
    "name": "Alessandro Belli",
    "email": "alessandrobelli90@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./Broller"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "BRoller"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "icon": "./broller"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-preferences": "^2.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "open": "^7.4.0",
    "pexels": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "11.2.1"
  }
}
